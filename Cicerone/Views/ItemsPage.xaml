<?xml version="1.0" encoding="utf-8"?>
<ContentPage
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:controls="clr-namespace:Cicerone.Controls"
    x:Class="Cicerone.Views.ItemsPage"
    Title="{Binding Title}"
    x:Name="BrowseItemsPage">

    <Shell.SearchHandler>
        <controls:BeerSearchHandler Placeholder="Enter a search term"
                                    Command="{Binding SearchCommand}"/>
    </Shell.SearchHandler>

    <CollectionView
        x:Name="ItemsListView"
        ItemsSource="{Binding Beers}"
        EmptyView="No items to display">
        <CollectionView.ItemTemplate>
            <DataTemplate>
            <StackLayout
                Padding="10">
                <Label
                    Text="{Binding BeerName}"
                    LineBreakMode="NoWrap"
                    Style="{DynamicResource ListItemTextStyle}"
                    FontSize="16" />
                <Label
                    Text="{Binding BeerDescription}"
                    LineBreakMode="NoWrap"
                    Style="{DynamicResource ListItemDetailTextStyle}"
                    FontSize="13" />
            </StackLayout>
                </DataTemplate>
        </CollectionView.ItemTemplate>>
    </CollectionView>
</ContentPage>